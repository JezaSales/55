@model int;
@{
    ViewData["Title"] = "Smart Collect Type";
}
<div aria-label="breadcrumb" class="breadcrumb" id="page-header">
    <div class="container-fluid">
        <h5 class="float-left"><i class="fa fa-users"></i> @ViewData["Title"]</h5>
        <ol class="breadcrumb float-right">
            <li class="breadcrumb-item"><a href="javascript:void(0)">Home</a></li>
            <li class="breadcrumb-item active"> @ViewData["Title"]</li>
        </ol>
    </div>
</div>

<div class="__p main-temp-body">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card mt-2">
                    <div class="card-header bg-gradientorange text-white text-monospace">
                        <i class="fas fa-link"></i> @ViewData["Title"]
                    </div>
                </div>
                <div class="card-body pt-2">
                    <div class="row">
                        <div class="table-responsive table-sm">
                            <table class="table table-bordered table-striped table-responsive-sm" id="smartCollect">
                                <thead class="bg-tableth">
                                    <tr>
                                        <th>#</th>
                                        <th>Smart Collect Type</th>
                                        <th>Remark</th>
                                        <th>IsActive</th>
                                        @if (ApplicationSetting.IsECollectEnable)
                                        {
                                            <th>IsVirtual</th>
                                        }
                                        @if (ApplicationSetting.IsUPIQR)
                                        {
                                            <th>IsQR</th>
                                        }
                                        @if (ApplicationSetting.IsUPI)
                                        {
                                            <th>IsVPA</th>
                                        }
                                    </tr>
                                </thead>
                                <tbody>
                                </tbody>
                            </table>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section scripts{
<script>
    $(document).ready(function () {
        loadData();
    });
    var loadData = function () {
        $.post('GetSmartCollectType')
            .done(function (res) {
                $("tbody").html(res)
            }).fail(function (xhr) {
                console.log(xhr.responseText)
            })
    }
</script>
}



