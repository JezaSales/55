    <div class="main-wrapper">
        <!-- Slider -->
        @{
            Model.Content = Model.Content != null ? Model.Content : new SiteTemplateSection();
            Model.Content.Slider = Model.Content?.Slider?.Replace("/>", "/>,") ?? string.Empty;
            string[] slider = Model.Content.Slider?.Split(",");
        }
        <div id="slider" class="carousel slide" data-ride="carousel">
            <!-- Indicators -->
            <ul class="carousel-indicators">
                @for (int i = 0; i < slider.Length - 1; i++)
                {
                    if (!string.IsNullOrEmpty(slider[i]))
                    {
                        <li data-target="#slider" data-slide-to=@i></li>
                    }
                }
            </ul>

            <!-- The slideshow -->
            <div class="carousel-inner">

                @for (int i = 0; i < slider.Length - 1; i++)
                {
                    if (!string.IsNullOrEmpty(slider[i]))
                    {
                        <div class="carousel-item @Html.Raw(i==0?"active":string.Empty)">
                            @Html.Raw(!string.IsNullOrEmpty(slider[i]) ? slider[i] : string.Empty)
                        </div>

                    }
                }

                <!-- Left and right controls -->
                <a class="carousel-control-prev" href="#slider" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#slider" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
