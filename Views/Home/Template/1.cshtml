            $('#btn-published').click(() => {
                let _template = $('content').clone();
                let _published = $('content').clone();
                _published.find('.content-overlay,.content-details').remove();
                _published.find('*').removeAttr('contenteditable');
                let publishTemplate = {
                    Template: _template.html(),
                    Published: _published.html(),
                    templateId: $('#templateId').val()
                };
                $.post('/Admin/PublishTemplate', publishTemplate).done(result => {
                    an.id = "alertMsg";
                    an.title = result.statuscode === an.type.success ? 'Well done' : 'Oops';
                    an.content = result.msg;
                    an.alert(result.statuscode);
                }).fail(xhr => {
                    console.log(xhr.responseText);
                    an.id = "alertMsg";
                    an.title = 'Oops';
                    an.content = xhr.status === 404 ? "Requested path not find" : (xhr.status === 0 ? "Internet is not connected" : "Server error");
                    an.alert(an.type.failed);
                }).always(() => { });



            });
        </script>
